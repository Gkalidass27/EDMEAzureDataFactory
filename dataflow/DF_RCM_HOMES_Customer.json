{
	"name": "DF_RCM_HOMES_Customer",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "HOMES_Customer_AFC_NONAFC",
						"type": "DatasetReference"
					},
					"name": "HOMESCustomerAFCNONAFC"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Masterdata_CDP_AllSourceCustomers",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          clusterID as string,",
				"          confidence_score as string,",
				"          globalID as string,",
				"          RecID as string,",
				"          posRawContainerRecID as string,",
				"          posFirstName as string,",
				"          posMiddleInitial as string,",
				"          posLastName as string,",
				"          posCustomerEmail1 as string,",
				"          posCustomerEmail2 as string,",
				"          posCustomerEmail3 as string,",
				"          posCustomerPhone1 as long,",
				"          posCustomerPhone2 as long,",
				"          posCustomerPhone3 as string,",
				"          n_address as string,",
				"          n_addr2 as string,",
				"          n_city as string,",
				"          n_state as string,",
				"          n_zip9 as string,",
				"          market_id as string,",
				"          customer_type as string,",
				"          timestamp as string,",
				"          customer_since as timestamp,",
				"          SourceSystem as string,",
				"          SourceSubSystem as timestamp,",
				"          racSalesNumber as string,",
				"          racProfitCenter as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     rowUrlColumn: 'FileName') ~> HOMESCustomerAFCNONAFC",
				"split1@AFC derive(FileName_AFC = substringIndex(FileName,'_',-3)\r",
				") ~> derivedColumn1",
				"HOMESCustomerAFCNONAFC split(regex_match(FileName, '*RAC*'),",
				"     disjoint: false) ~> split1@(AFC, NONAFC)",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          customerMasterId as long,",
				"          sourceCustomerId as string,",
				"          firstName as string,",
				"          middleInitial as string,",
				"          lastName as string,",
				"          customerEmail1 as string,",
				"          customerEmail2 as string,",
				"          customerEmail3 as string,",
				"          customerPhone1 as string,",
				"          customerPhone2 as string,",
				"          customerPhone3 as string,",
				"          addressLine1 as string,",
				"          addressLine2 as string,",
				"          city as string,",
				"          state as string,",
				"          zipCode as string,",
				"          marketId as string,",
				"          customerType as string,",
				"          sourceSystem as string,",
				"          sourceSubSystem as string,",
				"          createdDate as timestamp,",
				"          updatedDate as timestamp,",
				"          createdBy as string,",
				"          updatedBy as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          sourceCustomerId = FileName_AFC",
				"     )) ~> sink1"
			]
		}
	}
}